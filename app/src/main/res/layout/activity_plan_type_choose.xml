<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <TextView
        style="@style/MyText"
        android:padding="@dimen/text_padding"
        android:text="计划类型" />

    <LinearLayout
        style="@style/Wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/itemMargin">

            <TextView
                android:id="@+id/tv_item1"
                style="@style/MyText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_unselected"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="食堂买饭" />

            <TextView
                android:id="@+id/tv_item2"
                style="@style/MyText"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/itemMargin"
                android:layout_weight="1"
                android:background="@drawable/item_unselected"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="超市购物" />

            <TextView
                android:id="@+id/tv_item3"
                style="@style/MyText"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/itemMargin"
                android:layout_weight="1"
                android:background="@drawable/item_unselected"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="投递报销" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/itemMargin">

            <TextView
                android:id="@+id/tv_item4"
                style="@style/MyText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_unselected"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="图书馆" />

            <TextView
                android:id="@+id/tv_item5"
                style="@style/MyText"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/itemMargin"
                android:layout_weight="1"
                android:background="@drawable/item_unselected"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="校医院" />

            <TextView
                android:id="@+id/tv_item6"
                style="@style/MyText"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/itemMargin"
                android:layout_weight="1"
                android:background="@drawable/item_unselected"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="其他" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/MyText"
        android:padding="@dimen/text_padding"
        android:text="其他计划" />

    <LinearLayout
        style="@style/Wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_huge"
        android:paddingTop="@dimen/margin_huge">

        <EditText
            android:id="@+id/edt_type"
            style="@style/MyText.Large"
            android:background="@drawable/item_unselected"
            android:hint="简述您的计划"
            android:padding="@dimen/text_padding" />

        <TextView
            android:id="@+id/tv_cnt"
            style="@style/MyText.Small"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="0/5" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/RoundBtn"
        android:layout_margin="@dimen/margin_huge"
        android:text="确定" />

</LinearLayout>